<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>忘記密碼</title>
  <link rel="stylesheet" href="/stylesheets/css/bootstrap.min.css">
  <link rel='stylesheet' href='/stylesheets/css/newPwd.css'/>
</head>
<body>
  <!-- nav -->
  <% include template/nav %>

  <!-- 標題 -->
  <h1 class="text-center my-5">忘記密碼</h1>

  <!-- error text -->
  <% if (error.length > 0) { %>
  <div class="errorTextBorder">
    <img src="../../images/cancel-mark.svg" alt="error" class="errorIcon">
    <span class="errorText"><%= error %></span>
  </div>
  <% } %>

  <!-- 表格 -->
  <div class="center">
    <form action="/user/password/new" method="post" id="mailTokenForm">
      <div class="form-group row justify-content-center">
        <label for="" class="col-sm-2 col-md-2 col-form-label">帳號</label>
        <div class="col-sm-8">
          <input type="text" name="email" class="form-control" placeholder="abc123@examplemail.com" value="<%= email%>">
        </div>
      </div>
    </form>
  </div>

  <!-- send -->

  <div class="d-flex mt-5">
    <input form="mailTokenForm" type="submit" id="send" class="btn btnSend px-5 mx-auto my-3" value="寄驗證信">
  </div>





<script src="../../javascripts/lib/jquery-3.3.1.min.js"></script>
<script src="../../javascripts/lib/bootstrap.bundle.min.js"></script>
</body>
</html>

